<style>
	h1 {
		text-align: center;
		color: #f97316;
		margin-bottom: 1rem;
	}

	p {
		text-align: center;
		color: #d1d5db;
		font-size: 1.1rem;
		margin-bottom: 2rem;
	}

	.game-navigation {
		margin-bottom: 3rem;
	}

	.game-navigation h2 {
		text-align: center;
		color: #f97316;
		margin-bottom: 1.5rem;
	}

	.game-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.game-link {
		display: flex;
		align-items: center;
		padding: 1.5rem;
		border-radius: 12px;
		text-decoration: none;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.game-link.primary {
		background: linear-gradient(135deg, #7c3aed, #a855f7);
		color: white;
	}

	.game-link.primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
	}

	.game-link.secondary {
		background: linear-gradient(135deg, #f97316, #ea580c);
		color: white;
	}

	.game-link.secondary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(249, 115, 22, 0.4);
	}

	.link-icon {
		font-size: 3rem;
		margin-right: 1rem;
	}

	.link-content h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.3rem;
	}

	.link-content p {
		margin: 0;
		font-size: 0.9rem;
		opacity: 0.9;
		text-align: left;
	}

	.navigation {
		margin-top: 2rem;
		padding: 1rem;
		border: 1px solid #374151;
		border-radius: 8px;
	}
	
	.navigation ul {
		list-style-type: none;
		padding: 0;
	}
	
	.navigation li {
		margin: 0.5rem 0;
	}
	
	.navigation a {
		color: #60a5fa;
		text-decoration: none;
		font-weight: 500;
	}
	
	.navigation a:hover {
		color: #3b82f6;
		text-decoration: underline;
	}
</style>
