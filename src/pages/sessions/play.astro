---
// Página de sesión que maneja el ID via query params en el cliente
import Layout from '../../layouts/Layout.astro';
import { SessionGameView } from '../../components/SessionGameView';

// En modo estático, los query parameters no están disponibles en server-side
// Los manejaremos en el cliente con React
console.log('✅ Loading play page, session ID will be handled client-side');
---

<Layout title="QR Game - Sesión" description="Juego multijugador de Halloween">
  <main class="session-game-main">
    <SessionGameView client:load />
  </main>
  
  <style>
    .session-game-main {
      min-height: 100vh;
      background: linear-gradient(
        135deg,
        #1a0b2e 0%,
        #16213e 25%,
        #0f3460 50%,
        #e94057 75%,
        #f27121 100%
      );
      padding: 1rem;
      position: relative;
      overflow: hidden;
    }

    /* Partículas de Halloween en el fondo */
    .session-game-main::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 80%, rgba(255, 165, 0, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(147, 51, 234, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(251, 191, 36, 0.05) 0%, transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    /* Asegurar que el contenido esté por encima del fondo */
    .session-game-main > * {
      position: relative;
      z-index: 1;
    }

    body {
      margin: 0;
      font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #0a0a0a;
    }
  </style>
</Layout>